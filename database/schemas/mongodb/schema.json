        "bsonType": "int",
        "minimum": 0,
        "maximum": 100,
        "description": "must be an integer in [ 0, 100 ]"
      },
      "popularity": { "bsonType": "int" },
      "favourites": { "bsonType": "int" },
      "is_adult": { "bsonType": "bool" },
